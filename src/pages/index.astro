---
import LayoutWithHeader from "../layouts/LayoutWithHeader.astro";
import { NAME, SITE_DESCRIPTION } from "../config/config";
import { Icon } from "astro-icon";
import FeatureDeploy from "../components/FeatureDeploy.astro";
import Btn from "../components/Btn.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Container from "../components/Container.astro";
---

<LayoutWithHeader title={NAME} description={SITE_DESCRIPTION}>
  <!-- Feature section with grid -->
  <FeatureDeploy />

  <!-- Button component -->
  <div class="bg-gray-50 pt-12 sm:pt-16">

    <Container >
      <SectionTitle title="Trusted by developers from over 80 planets">
        <p class="mt-3 text-xl text-gray-500 sm:mt-4">
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Repellendus
          repellat laudantium.
        </p>
      </SectionTitle>
    </Container>
   
    <div class="mt-10 bg-white pb-12 sm:pb-16">
      <div class="relative">
        <div class="absolute inset-0 h-1/2 bg-gray-50"></div>
        <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-4xl">
            <dl class="rounded-lg bg-white shadow-lg sm:grid sm:grid-cols-3">
              <div
                class="flex flex-col border-b border-gray-100 p-6 text-center sm:border-0 sm:border-r"
              >
                <Btn
                  class="mx-4 my-16"
                  variant="solid"
                  color="slate"
                  aria-checked="false"
                  aria-labelledby="tac"
                >
                  Get 3 months free
                </Btn>
                <dt
                  class="order-2 mt-2 text-lg font-medium leading-6 text-gray-500"
                >
                  Pepperoni
                </dt>
                <dd
                  class="order-1 text-5xl font-bold tracking-tight text-gray-900"
                >
                  100%
                </dd>
              </div>
              <div
                class="flex flex-col border-t border-b border-gray-100 p-6 text-center sm:border-0 sm:border-l sm:border-r"
              >
                <Btn
                  href="google.com"
                  class="mx-4 my-16"
                  variant="solid"
                  color="blue"
                >
                  Get started
                </Btn>
                <dt
                  class="order-2 mt-2 text-lg font-medium leading-6 text-gray-500"
                >
                  Delivery
                </dt>
                <dd
                  class="order-1 text-5xl font-bold tracking-tight text-gray-900"
                >
                  24/7
                </dd>
              </div>
              <div
                class="flex flex-col border-t border-gray-100 p-6 text-center sm:border-0 sm:border-l"
              >
                <Btn
                  href="https://yourdomainv0-4.netlify.app/"
                                class="mx-4 my-16" 
                     target="_blank"
                >
                  <Icon
                    name="mdi:send"
                    class="w- h-4 mr-2"
                    aria-hidden="true"
                  />
                  Get started
                </Btn>
                <dt
                  class="order-2 mt-2 text-lg font-medium leading-6 text-gray-500"
                >
                  Calories
                </dt>
                <dd
                  class="order-1 text-5xl font-bold tracking-tight text-gray-900"
                >
                  100k
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</LayoutWithHeader>
