---
import { Icon } from "astro-icon";
const currentYear = new Date().getFullYear();
const footerNavigation = {
  solutions: [
    { name: 'Marketing', href: '#' },
    { name: 'Analytics', href: '#' },
    { name: 'Commerce', href: '#' },
    { name: 'Insights', href: '#' },
  ],
  support: [
    { name: 'Pricing', href: '#' },
    { name: 'Documentation', href: '#' },
    { name: 'Guides', href: '#' },
    { name: 'API Status', href: '#' },
  ],
  company: [
    { name: 'About', href: '#' },
    { name: 'Blog', href: '#' },
    { name: 'Jobs', href: '#' },
    { name: 'Press', href: '#' },
    { name: 'Partners', href: '#' },
  ],
  legal: [
    { name: 'Claim', href: '#' },
    { name: 'Privacy', href: '#' },
    { name: 'Terms', href: '#' },
  ],
  social: [
    {
      name: 'Facebook',
      href: '#',
      icon: 'facebook',},
      {
      name: 'Instagram',
      href: '#',
      icon: 'instagram'    },
    {
      name: 'Twitter',
      href: '#',
      icon: 'twitter'    },
    {
      name: 'GitHub',
      href: '#',
      icon: 'github'    },
    {
      name: 'Dribbble',
      href: '#',
      icon: 'dribbble'
    },
  ],
}
---

<footer class="bg-gray-50" aria-labelledby="footer-heading">
          <h2 id="footer-heading" class="sr-only">
            Footer
          </h2>
          <div class="mx-auto max-w-md px-4 pt-12 sm:max-w-7xl sm:px-6 lg:px-8 lg:pt-16">
            <div class="xl:grid xl:grid-cols-3 xl:gap-8">
              <div class="space-y-8 xl:col-span-1">
                <Icon name="logo" class='w-10' />
                <p class="text-base text-gray-500">
                  Making the world a better place through constructing elegant hierarchies.
                </p>
                <div class="flex space-x-6">
                  {footerNavigation.social.map((item) => (
                    <a  href={item.href} class="text-gray-400 hover:text-gray-500">
                      <span class="sr-only">{item.name}</span>
                      <Icon name={`mdi:${item.icon}`}  class="w-6 h-6" aria-hidden='true' />
 
                    </a>
                  ))}
                </div>
              </div>
              <div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
                <div class="md:grid md:grid-cols-2 md:gap-8">
                  <div>
                    <h3 class="text-base font-medium text-gray-900">Solutions</h3>
                    <ul role="list" class="mt-4 space-y-4">
                      {footerNavigation.solutions.map((item) => (
                        <li>
                          <a href={item.href} class="text-base text-gray-500 hover:text-gray-900">
                            {item.name}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                  <div class="mt-12 md:mt-0">
                    <h3 class="text-base font-medium text-gray-900">Support</h3>
                    <ul role="list" class="mt-4 space-y-4">
                      {footerNavigation.support.map((item) => (
                        <li>
                          <a href={item.href} class="text-base text-gray-500 hover:text-gray-900">
                            {item.name}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
                <div class="md:grid md:grid-cols-2 md:gap-8">
                  <div>
                    <h3 class="text-base font-medium text-gray-900">Company</h3>
                    <ul role="list" class="mt-4 space-y-4">
                      {footerNavigation.company.map((item) => (
                        <li>
                          <a href={item.href} class="text-base text-gray-500 hover:text-gray-900">
                            {item.name}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                  <div class="mt-12 md:mt-0">
                    <h3 class="text-base font-medium text-gray-900">Legal</h3>
                    <ul role="list" class="mt-4 space-y-4">
                      {footerNavigation.legal.map((item) => (
                        <li>
                          <a href={item.href} class="text-base text-gray-500 hover:text-gray-900">
                            {item.name}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="mt-12 border-t border-gray-200 py-8">
              <p class="text-base text-gray-400 xl:text-center">
                &copy; {currentYear}. Your Company, Inc. All rights reserved.
              </p>
            </div>
          </div>
        </footer>


